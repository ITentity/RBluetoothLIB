<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appscomm.rbluetoothlib.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/darker_gray">
        <TextView
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="20sp"
            android:text="@string/scan"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_begin_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18sp"
            android:text="@string/begin_scan"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_height="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/darker_gray">
        <TextView
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/connect"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_stop_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18sp"
            android:text="@string/stop_connect"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:background="@android:color/black"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/tv_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18sp"
            android:text="@string/start_connect"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_height="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/darker_gray">
        <TextView
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="20sp"
            android:text="@string/device_info"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_watch_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18sp"
            android:text="@string/get_watch_id"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:background="@android:color/black"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/tv_device_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18sp"
            android:text="@string/get_device_version"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:background="@android:color/black"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/tv_device_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18sp"
            android:text="@string/device_date_time"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:background="@android:color/black"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/tv_set_device_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18sp"
            android:text="@string/set_device_date_time"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_height="3dp" />

</LinearLayout>
